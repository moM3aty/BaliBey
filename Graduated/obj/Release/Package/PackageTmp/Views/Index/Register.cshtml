@model Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section link{
    <link href="~/Content/SignUp.css" rel="stylesheet" />
}
@section navlog{
    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 col-4">
        <a style="text-decoration:none;display:flex;" href="~/Home/Editor"><h1 class="logo1"> BaliBey<img src="~/images/magic.png" alt="magic" width="47" /> </h1></a>
    </div>
    <div class="col-xl-7 col-lg-7 col-md-3 col-sm-4 col-4">
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                           border-radius: 10px;">
                <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
            </button>
            <div id="show" class="dropdown-content">
                <a class="li a" href="~/Home/Editor"><i style="margin-right:2px;" class="fas fa-mug-hot"></i> Menu</a>
                <a class="li a" href="#search"> <i style="margin-right:2px;" class="fas fa-search"></i>  Search Menu </a>
                <a class="li a" href="#about"> <i style="margin-right:2px;" class="fas fa-address-card"> </i>  About Us </a>
                <a class="li a" href="#Social"> <i style="margin-right:2px;" class="fas fa-headphones-alt"> </i>  Contacts </a>
            </div>
        </div>
    </div>
    <div class="Register col-xl-3 col-lg-3 col-md-5 col-sm-4 col-4">
        <a class="a-log1" href="~/Home/Logout"><i style="margin-right:2px;" class="fas fa-key"></i> Logout </a>
    </div>
}
<!-- SignUp -->
<section class="MenSec">
    <p class="Title">Add New User Admin</p>
    <br />
    <div class="Form">
        <video autoplay muted controls>
            <source src="~/media/coffee.mp4" type="video/mp4">
        </video>
        <div>
            @using (Html.BeginForm("Register", "Index", FormMethod.Post, new { @class = "form-details" }))
            {
                <div>
                    <img src="~/images/3.png" alt="Balibey" style="width: 50%;">
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.Fname, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.Fname, new { htmlattributes = new { @class = "input", @placeholder = "First Name" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.Fname, "", new { @class = " text-danger validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.Lname, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.Lname, new { htmlattributes = new { @class = "input", @placeholder = "Last Name" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.Lname, "", new { @class = " text-danger  validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.Email, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.Email, new { htmlattributes = new { @class = "input", @placeholder = "Email" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.Email, "", new { @class = " text-danger  validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.pwd, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.pwd, new { htmlattributes = new { @class = "input", @placeholder = "Password" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.pwd, "", new { @class = " text-danger  validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.Cpwd, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.Cpwd, new { htmlattributes = new { @class = "input", @placeholder = "Confirm Password" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.Cpwd, "", new { @class = " text-danger  validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.DOB, htmlAttributes: new { @class = "label" })
                    @Html.EditorFor(ww => ww.DOB, new { htmlattributes = new { @class = "input", @placeholder = "Date OF Birth" } })
                    <br />
                    @Html.ValidationMessageFor(ww => ww.DOB, "", new { @class = " text-danger  validate" })
                </div>
                <div class="Items">
                    @Html.LabelFor(ww => ww.Gender, htmlAttributes: new { @class = " label" })
                    <label class="radio size-radio"> Man   : @Html.RadioButton("Gender", "Man", htmlAttributes: new { @class = "rad" })</label>
                    <label class="size-radio"> Woman : @Html.RadioButton("Gender", "Woman")</label>
                    <br />
                    @Html.ValidationMessageFor(ww => ww.Gender, "", new { @class = " text-danger validate " })
                </div>
                <div>
                    <input type="submit" class="submit" value="Add User">
                    <p class="log-media">Back To <a href="~/Home/Editor" class="logIn">Edit_Menu</a></p>
                </div>
            }
        </div>
    </div>
</section>
@section search{ }