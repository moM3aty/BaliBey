@model ViewModel
@{
    ViewBag.Title = "Editor";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section link{
    <link href="~/Content/card.css" rel="stylesheet" />
}
@section navlog{
    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 col-4">
        <a style="text-decoration:none;display:flex;" href="#Menu"><h1 class="logo"> BaliBey<img src="~/images/magic.png" alt="magic" width="47" /> </h1></a>
    </div>
    <div class="col-xl-7 col-lg-7 col-md-4 col-sm-4 col-4">
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                           border-radius: 10px;">
                <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
            </button>
            <div id="show" class="dropdown-content">
                <a class="li a" href="#Menu"><i style="margin-right:2px;" class="fas fa-mug-hot"></i> Menu</a>
                <a class="li a" href="#search"> <i style="margin-right:2px;" class="fas fa-search"></i>  Search Menu </a>
                <a class="li a" href="#about"> <i style="margin-right:2px;" class="fas fa-address-card"> </i>  About Us </a>           
                <a class="li a" href="#Social"> <i style="margin-right:2px;" class="fas fa-headphones-alt"> </i>  Contacts </a>
            </div>
        </div>
    </div>
    <div class="Register col-xl-3 col-lg-3 col-md-4 col-sm-4 col-4">
        <a class="a-log" href="~/Index/Register"> <i style="margin-right:2px;" class="fas fa-user-plus"> </i> Add User </a>
        <a class="a-log" href="~/Home/Logout"><i style="margin-right:2px;font-size:20px;" class="fas fa-key"></i> Logout </a>
    </div>
}
<div style="text-align: center; margin: 15px; margin-top: -15px;" data-aos="flip-right" data-aos-duration="1000">
    @Html.ActionLink("Add New Item", "AddNew", "Home", new { @class = "NewItem" })
    @Html.ActionLink("Add Category", "AddCategory", "Home", new { @class = "NewItem" })
</div>
<br />
<section class="MenSec" id="Menu" data-aos="zoom-in" data-aos-duration="1500">
    <label class="Title" data-aos="flip-right" data-aos-duration="1500"> Menu List</label>
    <br /><br />
    @foreach (var item in Model.Categories)
    {
        <button class="show" style="display:flex;padding-bottom:30px;" data-aos="flip-up" data-aos-duration="1500" >
            <p class="col-10" style="margin-right:-250px; margin-top:-10px;">&clubs; @item.Cat &clubs;</p>
            <div style="margin-top: -10px;" class="col-2">
                @Html.ActionLink("Edit", "EditCat", "Home", new { id = item.ID, name = item.Cat }, new { @class = "btn Edit-button" })
                @Html.ActionLink("Delete", "DeleteCat", "Home", new { id = item.ID, name = item.Cat }, new { @class = "btn delete-button" })
            </div>
        </button>

        <div class="product">
            @foreach (var items in Model.Menu_Items)
            {
                if (items.CatID == item.ID)
                {
                    <div class="card-Index" data-aos="flip-down" data-aos-duration="1500">
                        <div>
                            <img class="img" src="@Url.Content(items.Path)" alt="@items.name">
                        </div>
                        <p class="card-text"> @Html.DisplayFor(w => items.name) &hearts;</p>
                        <p class="card-detail"> <span>Price : </span> @Html.DisplayFor(w => items.price) Pound</p>
                        <p class="card-detail"><span>Details : </span>@Html.DisplayFor(w => items.Description)</p>
                        <div style="margin-bottom:10px;">
                            @Html.ActionLink("Edit", "Edit", "Home", new { id = items.Id, name = items.name }, new { @class = "btn Edit-button" })
                            @Html.ActionLink("Delete", "Delete", "Home", new { id = items.Id, name = items.name }, new { @class = "btn delete-button" })
                        </div>
                    </div>

                }
            }

        </div>
        <br />
    }
</section>
@section search{ }
