@model menu_item
@{
    ViewBag.Title = "Edit_Menu_Item";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section link{
    <link href="~/Content/LogIn.css" rel="stylesheet" />
}
@section navlog{
    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 col-4">
        <a style="text-decoration:none;display:flex;" href="~/Home/Editor"><h1 class="logo1"> BaliBey<img src="~/images/magic.png" alt="magic" width="47" /> </h1></a>
    </div>
    <div class="col-xl-7 col-lg-7 col-md-3 col-sm-2 col-2">
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                           border-radius: 10px;">
                <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
            </button>
            <div id="show" class="dropdown-content">
                <a class="li a" href="~/Home/Editor"><i style="margin-right:2px;" class="fas fa-mug-hot"></i> Menu</a>
                <a class="li a" href="#search"> <i style="margin-right:2px;" class="fas fa-search"></i>  Search Menu </a>
                <a class="li a" href="#about"> <i style="margin-right:2px;" class="fas fa-address-card"> </i>  About Us </a>
                <a class="li a" href="#Social"> <i style="margin-right:2px;" class="fas fa-headphones-alt"> </i>  Contacts </a>
            </div>
        </div>
    </div>
    <div class="Register col-xl-3 col-lg-3 col-md-5 col-sm-6 col-6">
        <a class="a-log1" href="~/Index/Register"> <i style="margin-right:2px;" class="fas fa-user-plus"> </i> Add User </a>
        <a class="a-log1" href="~/Home/Logout"><i style="margin-right:2px;" class="fas fa-key"></i> Logout </a>
    </div>
}

<p class="Title">Edit</p>
<br />
<div class="Form">
    @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "form-details", @enctype = "multipart/form-data" }))
    {
        <div>
            <img src="~/images/3.png" alt="Balibey" style="width: 50%;">
        </div>
        <div class="Items">
            @Html.LabelFor(ww => ww.name, htmlAttributes: new { @class = "label", @style = "width:150px;" })
            @Html.EditorFor(ww => ww.name, new { htmlattributes = new { @class = "input", @placeholder = "Name" } })
            <br />
            @Html.ValidationMessageFor(ww => ww.name, "", new { @class = " text-danger ", @style = "font-size:16px;" })
        </div>
        <div class="Items">
            @Html.LabelFor(ww => ww.price, htmlAttributes: new { @class = "label", @style = "width:150px;" })
            @Html.EditorFor(ww => ww.price, new { htmlattributes = new { @class = "input", @placeholder = "Price" } })
            <br />
            @Html.ValidationMessageFor(ww => ww.price, "", new { @class = " text-danger  ", @style = "font-size:16px;" })
        </div>
        <div class="Items">
            @Html.LabelFor(ww => ww.Description, htmlAttributes: new { @class = "label", @style = "width:150px;" })
            @Html.EditorFor(ww => ww.Description, new { htmlattributes = new { @class = "input", @placeholder = "Description" } })
        </div>
        <div>
            <label class="label" style="width:150px;margin-left:-40%;">Image :</label>
            <img src="@Url.Content(Model.Path)" height="200" width="150" style="border-radius:25px;border:1px solid #ff6a00;" />
            <br /><br />
            <input type="file" name="Myfile" class="input" style="margin-left:30%;" />
        </div>
        <div class="Items" style="display:flex;">
            @Html.LabelFor(ww => ww.Category, htmlAttributes: new { @class = "label", @style = "width:153px;" })
            <div class="input">
                @Html.DropDownListFor(ww => ww.CatID, ViewBag.cat as SelectList, htmlAttributes: new { @class = "DropList" })
            </div>
        </div>
        <div>
            <input type="submit" class="submit" value="Edit">
            <p style="padding-top: 10px;">Back To @Html.ActionLink("Edit_Menu", "Editor", "Home", new { @class = "logIn", @style = " text-decoration: none; color: #008e76;" })</p>
        </div>
    }
</div>
@section search{ }
