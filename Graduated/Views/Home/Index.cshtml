@section navlog{
    <nav class="container-fluid">
        <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 col-6">
            <a style="text-decoration:none;" href="#Menu"><h1 class="logo">BaliBey<img src="~/images/magic.png" alt="magic" width="47"/></h1></a>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-4 col-sm-4 col-2">
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                       border-radius: 10px;">
                    <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
                </button>
                <div id="show" class="dropdown-content">
                    <a class="li a" href="#Menu"><i style="margin-right:2px;" class="fas fa-mug-hot"></i> Menu</a>
                    <a class="li a" href="#search"> <i style="margin-right:2px;" class="fas fa-search"></i>  Search Menu </a>
                    <a class="li a" href="#about"> <i style="margin-right:2px;" class="fas fa-address-card"> </i>  About Us </a>
                    <a class="li a" href="#Social"> <i style="margin-right:2px;" class="fas fa-headphones-alt"> </i>  Contacts </a>
                </div>
            </div>
        </div>
        <div class="Register col-xl-2 col-lg-2 col-md-4 col-sm-4 col-4">
            <a class="a-log" href="~/Index/LogIn">User LogIn</a>
        </div>
    </nav>
}
<section class="MenSec " data-aos="zoom-in" data-aos-duration="1500">
    <label class="Title" data-aos="flip-right" data-aos-duration="1500"> Menu List</label>
    <br /><br />
    @foreach (var item in Model.Categories)
    {
        <button class="show" onclick="openFunction();" data-aos="flip-up" data-aos-duration="1500">
            <p>&clubs; @item.Cat &clubs;</p>
        </button>

        <div class="product">
            @foreach (var items in Model.Menu_Items)
            {
                if (items.CatID == item.ID)
                {
                    <div class="card-Index" data-aos="flip-down" data-aos-duration="1500">
                        <div>
                            <img class="img" src="@Url.Content(items.Path)" alt="@items.name">
                        </div>
                        <p class="card-text">&hearts; @Html.DisplayFor(w => items.name) &hearts;<p>
                        <p class="card-detail">Price : @Html.DisplayFor(w => items.price) pound</p>
                        <p class="card-detail">Details :@Html.DisplayFor(w => items.Description)</p>
                    </div>

                }
            }
        </div>
        <br />
    }
</section>
