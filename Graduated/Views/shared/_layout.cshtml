<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link href="~/Content/card.css" rel="stylesheet" />
    <link href="~/Content/header.css" rel="stylesheet" />
    @RenderSection("link")
    <link rel="icon" type="icon/png" href="~/images/4.png">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Balibey</title>
</head>
<body>
    <header style="position: relative;">
        <!-- navigation Bar -->
        <nav class="container-fluid" data-aos="fade-down" data-aos-duration="1000">
            @RenderSection("navlog")
        </nav>
    </header>
    <div>
        <div class="container" data-aos="zoom-out" data-aos-duration="1000">
            <div class="card">
                <div class="form">
                    <div class="left-side">
                        <div class="medium-div">
                            <h1> BaliBey <img src="~/images/magic2.png" alt="magic" /> </h1>
                            <p>
                                Best Coffee Made For You <br />
                                <i class="fas fa-hand-holding-heart"></i>
                                <i class="fas fa-grin-hearts"></i>
                                <i id="Menu" class="fas fa-smile-wink"></i>
                            </p>

                        </div>
                    </div>
                    <div class="right-side">
                        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button id="Menu" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner" style="height:80%">
                                <div class="carousel-item active">
                                    <img src="~/images/b2.png" class="d-block w-100" alt="Balibey" style="width:100%;height:500px;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/b.png" class="d-block w-100" alt="Balibey" style="width:100%;height:500px;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/b3.jpg" class="d-block w-100" alt="Balibey" style="width:100%;height:500px;">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br>
    <!-- Products -->
    @RenderBody()
    <div id="search">  </div>
    <br /><br />

    <!--Search-->

    <section class="MenSec" data-aos="fade-right" data-aos-duration="1500">
        @RenderSection("search")
        <br />
        <p class="Title">Search Menu Item</p>
        <br />
        <div class="Formm">
            @if (ViewBag.Title == "LogIn" || ViewBag.Title == "Search" || ViewBag.Title == "Index" || ViewBag.Title == "Search-Result")
            {
                using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-detailss" }))
                {
                    <div>
                        <img src="~/images/3.png" alt="Balibey" style="width: 150px;">
                    </div>
                    <br />
                    <div class="Itemss">
                        <label class="labell">Search By:</label>
                        <label class="radio size-radio"> Category   : @Html.RadioButton("searchBy", "Category", htmlAttributes: new { @class = "rad" })</label>
                        <label class="size-radio"> Menu-Item : @Html.RadioButton("searchBy", "Item", true)</label>
                    </div>
                    <div class="Itemss">
                        <label class="labell">Search :</label>
                        <input type="search" value="@ViewData["GetDetails"]" name="Search" placeholder="Search ..." class="inputt" />
                    </div>
                    <div id="about">
                        <input type="submit" class="submitt" value="Search">
                    </div>
                }

            }
            else
            {
                using (Html.BeginForm("SearchEdit", "Home", FormMethod.Get, new { @class = "form-detailss" }))
                {
                    <div>
                        <img src="~/images/3.png" alt="Balibey" style="width: 150px;">
                    </div>
                    <br />
                    <div class="Itemss">
                        <label class="labell">Search By :</label>
                        <label class="radio size-radio"> Category   : @Html.RadioButton("searchBy", "Category", htmlAttributes: new { @class = "rad" })</label>
                        <label class="size-radio"> Menu-Item : @Html.RadioButton("searchBy", "Item", true)</label>
                    </div>
                    <div class="Itemss">
                        <label class="labell" style="width: 110px;">Search :</label>
                        <input type="search" value="@ViewData["GetDetails"]" name="Search" placeholder="Search ..." class="inputt" />
                    </div>
                    <div id="about">
                        <input type="submit" class="submitt" value="Search">
                    </div>
                }

            }

        </div>
    </section>

